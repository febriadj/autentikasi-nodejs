<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/style.css")
    title Login
  body
    #auth-form
      form(action="/login", method="post" id="wrap")
        - if (message !== undefined) {
            p.pesan #{ message }
        - }
        h2.title LOGIN
        input(type="text", name="nameOrEmail" placeholder="Username or Email")
        input(type="password", name="password" placeholder="Password")
        button(type="submit") Login
        a(href="/register" class="register") REGISTER